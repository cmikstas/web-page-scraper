<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="navbar-logout" href="/">Return to Portfolio</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div id="page-body">
    <div class="container mt-3" style="justify-content: space-between;">
        <div>
            <h2>Take a look through everything that was scraped</h2>
        </div>
        <div>
            <ul>
                {{#each results}}
                    <li>{{topic}}</li>
                    <li>{{title}}</li>
                    <li><a href={{link}}>{{link}}</a></li>
                    <button type="button" id="save-article" class="btn btn-primary mt-2">Save Article</button>
                    <br>
                    <br>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<footer id="sticky-footer" class="pt-4 pb-1 mt-4">
    <div class="container text-center">
        <small>&copy;Chris Mikstas</small>
    </div>
</footer>

